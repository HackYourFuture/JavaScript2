function doubleOddNumbers(numbers) {
	  console.log(numbers);
	  return numbers.filter(num => num % 2 !== 0).map(num => num * 2);
	}
	  const myNumbers = [1, 2, 3, 4];
	console.log(doubleOddNumbers(myNumbers));
  
  
  
  
